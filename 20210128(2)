#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>

//https://www.acmicpc.net/problem/2675

int main(void) {

	int testCase, repeat;
	char string[21] = { '\0' };

	scanf("%d", &testCase);

	for (int i = 0; i < testCase; i++) {

		int k = 0;

		scanf("%d", &repeat);
		scanf("%s", string);

		while (string[k] != '\0') {

			for (int j = 0; j < repeat; j++) {
				printf("%c", string[k]);
			}


			k++;

		}
		printf("\n");

	}

	return 0;
}
